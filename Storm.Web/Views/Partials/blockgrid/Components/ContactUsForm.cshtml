@using Storm.Core.Controllers;
@using Umbraco.Cms.Core.Models.Blocks
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<BlockGridItem>
@{
    var content = Model.Content as ContactUsForm;
    var redirectToPageId = content?.ThankYouPage?.Id;
}

@section additionalAssets {
    <link rel="stylesheet" href="/assets/css/bootstrap.css" />
}

@if (TempData["ContactSuccess"] == null || (bool)TempData["ContactSuccess"] == false)
{
    @using (Html.BeginUmbracoForm<ContactUsController>(nameof(ContactUsController.SubmitForm), null, new { @class = "form-horizontal" }, FormMethod.Post))
    {
        <input type="hidden" value="@redirectToPageId" id="redirectToPageId" name="RedirectToPageId" />
        <div class="form-group">
            @Html.ValidationSummary()
        </div>

        <div class="form-group">
            <label class="2u" for="firstName">@Umbraco.GetDictionaryValue("FirstName") *</label>
            <input type="text" class="form-control" id="firstName" name="FirstName" placeholder="First name" />
        </div>
        <div class="form-group">
            <label class="2u" for="lastName">@Umbraco.GetDictionaryValue("LastName") *</label>
            <input type="text" class="form-control" id="lastName" name="LastName" placeholder="Last name" />
        </div>
        <div class="form-group">
            <label class="2u" for="emailAddress">@Umbraco.GetDictionaryValue("EmailAddress") *</label>
            <input type="email" class="form-control" id="emailAddress" name="EmailAddress" placeholder="Email address" />
        </div>
        <div class="form-group">
            <label class="2u" for="message">@Umbraco.GetDictionaryValue("Message") *</label>
            <textarea class="form-control" rows="5" cols="50" id="message" name="Message"></textarea>
        </div>
        <button type="submit" class="btn btn-default">@(string.IsNullOrEmpty(content?.SubmitButtonText) ? "Submit" : content?.SubmitButtonText)</button>

    }
}
else
{
    <p>@Umbraco.GetDictionaryValue("ThankYouMessage")</p>
}



